<%- include("partials/header") -%>

<div class="container">
    <h1><%= stackName %></h1>
    
    <form action="/compose">
        <button class="btn btn-primary" type="submit" name="button">Compose</button>
        </form>
    
    <%  posts.forEach(function(post){ %>

    
        <div class="card">
    
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>

              <p class="card-text"><%= post.content %></p>
              <a href="/girls/<%=post.author %>" class="card-text" ><%= post.authorName %></a>
            </div>
          </div>
        
        
        
        <%})%>


</div>





<%- include("partials/footer") -%>